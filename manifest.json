{
  "name": "Black hole ad blocker",
  "description": "Black hole ad blocker is an invisible ad-blocker created for Chromium-based browser",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/blackhole_16.png",
      "32": "/images/blackhole_32.png",
      "48": "/images/blackhole_48.png",
      "128": "/images/blackhole_128.png"
    }
  },
  "icons": {
    "16": "/images/blackhole_16.png",
    "32": "/images/blackhole_32.png",
    "48": "/images/blackhole_48.png",
    "128": "/images/blackhole_128.png"
  },
  "background": {
    "service_worker": "script.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "data/*.json"
  ]
}